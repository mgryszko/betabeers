{
    "name":"Piralibro",
    "version":"1.0",
    "manifest_version":2,
    "description":"Download ebooks directly from Amazon",
    "background":{
        "scripts":["background.js"]
    },
    "page_action":{
        "default_icon":"icon.png",
        "default_title":"Download this book",
        "default_popup":"popup.html"
    },
    "permissions":[
        "tabs",
        "http://api.flickr.com/"
    ]
}